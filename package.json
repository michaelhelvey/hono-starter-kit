{
  "name": "@michaelhelvey/hono-starter-kit",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write --ignore-unknown .",
    "dev:relay": "node --import tsx src/lib/websocket-relay.ts",
    "dev:app": "node --watch --import tsx src/index.tsx",
    "dev": "run-p dev:relay dev:app",
    "test": "vitest",
    "build:css": "postcss src/globals.css -o public/generated/globals.css",
    "e2e:setup": "npx playwright install",
    "test:e2e": "npx playwright test",
    "db:nuke": "rm -f db.sqlite db.sqlite-journal && rm -rf drizzle && npm run db:generate && npm run db:migrate",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "trailingComma": "all",
    "useTabs": false,
    "printWidth": 100,
    "tabWidth": 2,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^node:.*$",
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@happy-dom/global-registrator": "20.0.10",
    "@hono/valibot-validator": "0.6.0",
    "@playwright/test": "1.57.0",
    "@tailwindcss/postcss": "4.1.17",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/node": "24.5.0",
    "dotenv": "17.2.3",
    "drizzle-kit": "0.31.7",
    "eslint": "9.39.1",
    "happy-dom": "20.0.10",
    "husky": "9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.17",
    "tsx": "4.20.6",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.47.0",
    "vitest": "4.0.13"
  },
  "dependencies": {
    "@hono/node-server": "1.14.2",
    "@hono/node-ws": "1.2.0",
    "@libsql/client": "0.15.15",
    "drizzle-orm": "0.44.7",
    "hono": "4.10.6",
    "uuid": "13.0.0",
    "valibot": "1.2.0"
  },
  "overrides": {
    "esbuild": ">=0.25.0"
  }
}
